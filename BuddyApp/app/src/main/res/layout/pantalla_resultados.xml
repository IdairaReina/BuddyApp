<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_resultados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atardecer_fondo">

    <!-- Imagen centrada de resultados -->

    <!-- Texto: puntuación y nombre -->

    <ImageView
        android:id="@+id/fondo_resultados"
        android:layout_width="515dp"
        android:layout_height="368dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cuadro_resultados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto: nivel alcanzado -->

    <!-- Texto: estadísticas -->

    <TextView
        android:id="@+id/texto_puntuacion"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Has conseguido 0 puntos. ¡Muy bien hecho!"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/texto_puntuacion2"
        android:layout_width="219dp"
        android:layout_height="29dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Puntuación Final"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/texto_puntuacion3"
        android:layout_width="155dp"
        android:layout_height="33dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Nivel alcanzado"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/texto_puntuacion4"
        android:layout_width="223dp"
        android:layout_height="29dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Estadísticas personales"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746" />

    <TextView
        android:id="@+id/texto_nivel"
        android:layout_width="187dp"
        android:layout_height="40dp"
        android:layout_marginTop="176dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Alcanzaste el nivel medio"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/fondo_resultados"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="@id/fondo_resultados"
        app:layout_constraintTop_toTopOf="@+id/fondo_resultados" />

    <TextView
        android:id="@+id/texto_estadisticas"
        android:layout_width="146dp"
        android:layout_height="58dp"
        android:layout_marginTop="68dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Aciertos: 0   Fallos: 0"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/fondo_resultados"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@id/fondo_resultados"
        app:layout_constraintTop_toBottomOf="@id/texto_nivel" />

    <ImageView
        android:id="@+id/imagen_diana"
        android:layout_width="70dp"
        android:layout_height="67dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/diana"
        app:layout_constraintStart_toStartOf="@id/fondo_resultados"
        app:layout_constraintTop_toTopOf="@id/fondo_resultados" />

    <ImageView
        android:id="@+id/imagen_medalla"
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="136dp"
        android:src="@drawable/medalla"
        app:layout_constraintStart_toStartOf="@id/fondo_resultados"
        app:layout_constraintTop_toTopOf="@id/fondo_resultados" />

    <ImageView
        android:id="@+id/imagen_estadisticas"
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="252dp"
        android:src="@drawable/estadisticas"
        app:layout_constraintStart_toStartOf="@id/fondo_resultados"
        app:layout_constraintTop_toTopOf="@id/fondo_resultados" />

    <ImageButton
        android:id="@+id/btn_volver_menu"
        android:layout_width="107dp"
        android:layout_height="65dp"
        android:background="@null"
        android:contentDescription="Volver al menú"
        android:scaleType="fitXY"
        android:src="@drawable/boton_volver_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />


</androidx.constraintlayout.widget.ConstraintLayout>